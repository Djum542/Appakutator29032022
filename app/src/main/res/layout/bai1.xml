<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="locale"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#F44636"
        android:gravity="center"
        android:text="Top Content Here"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        android:layout_toLeftOf="@+id/Second"
        android:textSize="35sp"
        android:background="#4CAF50"
        android:layout_centerInParent="true"/>
<TextView
    android:id="@+id/Second"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Second"
    android:background="#257"
    android:textSize="35sp"
    android:layout_centerInParent="true"/>
<TextView
    android:id="@+id/Three"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Three"
    android:textSize="35sp"
    android:layout_toEndOf="@+id/Second"
    android:background="#752"
    android:layout_centerInParent="true"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bottom Content Here"
    android:textSize="35sp"
    android:layout_alignParentBottom="true"
    android:background="#765"/>
</RelativeLayout>